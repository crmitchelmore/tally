{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tally Design Tokens - Single source of truth for cross-platform design consistency",
  "version": "1.0.0",
  
  "colors": {
    "brand": {
      "ink": {
        "value": "oklch(0.25 0.02 30)",
        "description": "Tally line color - primary brand mark"
      },
      "slash": {
        "value": "oklch(0.55 0.22 25)",
        "description": "Tally cross/slash - warm accent (the 5th tally mark)"
      },
      "focus": {
        "value": "oklch(0.5 0.2 240)",
        "description": "Focus ring color for accessibility"
      }
    },
    
    "status": {
      "ahead": {
        "light": "oklch(0.45 0.18 145)",
        "dark": "oklch(0.55 0.18 145)",
        "description": "Ahead of pace - green"
      },
      "onPace": {
        "light": "oklch(0.55 0.15 90)",
        "dark": "oklch(0.65 0.15 90)",
        "description": "On pace - yellow/amber"
      },
      "behind": {
        "light": "oklch(0.55 0.22 25)",
        "dark": "oklch(0.65 0.22 25)",
        "description": "Behind pace - matches brand slash"
      },
      "streak": {
        "light": "oklch(0.6 0.2 50)",
        "dark": "oklch(0.65 0.2 50)",
        "description": "Streak/fire indicator - orange"
      }
    },
    
    "chart": {
      "grid": {
        "light": "oklch(0.85 0.01 50)",
        "dark": "oklch(0.35 0.01 50)"
      },
      "axis": {
        "light": "oklch(0.5 0.01 30)",
        "dark": "oklch(0.6 0.01 30)"
      },
      "tooltipBg": {
        "light": "oklch(0.99 0.002 50)",
        "dark": "oklch(0.25 0.002 50)"
      },
      "tooltipBorder": {
        "light": "oklch(0.85 0.01 50)",
        "dark": "oklch(0.35 0.01 50)"
      },
      "targetLine": {
        "light": "oklch(0.7 0.01 30)",
        "dark": "oklch(0.5 0.01 30)"
      }
    },
    
    "heatmap": {
      "level0": {
        "light": "oklch(0.94 0.006 50)",
        "dark": "oklch(0.25 0.006 50)"
      },
      "level1": {
        "light": "oklch(0.75 0.08 35)",
        "dark": "oklch(0.35 0.08 35)"
      },
      "level2": {
        "light": "oklch(0.6 0.12 35)",
        "dark": "oklch(0.45 0.12 35)"
      },
      "level3": {
        "light": "oklch(0.45 0.15 35)",
        "dark": "oklch(0.55 0.15 35)"
      },
      "level4": {
        "light": "oklch(0.3 0.18 35)",
        "dark": "oklch(0.65 0.18 35)"
      }
    },
    
    "records": {
      "bestDay": "oklch(0.65 0.24 60)",
      "streak": "oklch(0.55 0.22 25)",
      "average": "oklch(0.45 0.18 145)",
      "active": "oklch(0.5 0.2 260)",
      "entry": "oklch(0.55 0.25 280)",
      "milestone": "oklch(0.6 0.22 40)",
      "maxReps": "oklch(0.58 0.26 30)"
    }
  },
  
  "typography": {
    "fontFamilies": {
      "sans": {
        "web": "'Geist', -apple-system, BlinkMacSystemFont, sans-serif",
        "ios": "-apple-system",
        "android": "sans-serif"
      },
      "mono": {
        "web": "'Geist Mono', monospace",
        "ios": ".AppleSystemUIFontMonospaced",
        "android": "monospace"
      }
    },
    "fontFeatures": {
      "tabularNumbers": {
        "web": "'tnum' 1",
        "ios": "monospacedDigit()",
        "android": "FontFamily.Monospace"
      }
    }
  },
  
  "spacing": {
    "unit": 8,
    "scale": {
      "xs": 4,
      "sm": 8,
      "md": 16,
      "lg": 24,
      "xl": 32,
      "2xl": 48,
      "3xl": 64
    }
  },
  
  "radii": {
    "sm": 4,
    "md": 8,
    "lg": 12,
    "xl": 16,
    "2xl": 24,
    "full": 9999
  },
  
  "motion": {
    "duration": {
      "fast": 120,
      "normal": 220,
      "slow": 320,
      "hero": 420
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
      "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
      "bounce": "cubic-bezier(0.34, 1.56, 0.64, 1)"
    }
  },
  
  "shadows": {
    "sm": {
      "light": "0 1px 2px oklch(0 0 0 / 5%)",
      "dark": "0 1px 2px oklch(0 0 0 / 20%)"
    },
    "md": {
      "light": "0 4px 6px oklch(0 0 0 / 7%)",
      "dark": "0 4px 6px oklch(0 0 0 / 25%)"
    },
    "lg": {
      "light": "0 10px 15px oklch(0 0 0 / 10%)",
      "dark": "0 10px 15px oklch(0 0 0 / 30%)"
    }
  }
}
