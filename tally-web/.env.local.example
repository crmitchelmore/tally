# Clerk Authentication (Dev Instance)
# Use dev instance keys for local development
# Test users should be created in the dev Clerk instance
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# Convex Database
# For local development, use the dev deployment
CONVEX_DEPLOYMENT=dev:bright-jackal-396
NEXT_PUBLIC_CONVEX_URL=https://bright-jackal-396.convex.cloud

# Clerk JWT Issuer for Convex (get this from Clerk dashboard)
CLERK_JWT_ISSUER_DOMAIN=https://xxx.clerk.accounts.dev

# LaunchDarkly Feature Flags (optional - features work without this)
NEXT_PUBLIC_LAUNCHDARKLY_CLIENT_SIDE_ID=xxx

# Sentry Error Monitoring (optional - app works without this)
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_ORG=tally-lz
SENTRY_PROJECT=javascript-nextjs
SENTRY_AUTH_TOKEN=xxx
SENTRY_ENVIRONMENT=development

# Honeycomb Observability (traces, metrics, logs)
# Get your API key from https://ui.honeycomb.io/account
HONEYCOMB_API_KEY=xxx
HONEYCOMB_DATASET=tally-web

# PostHog Analytics (optional - app works without this)
NEXT_PUBLIC_POSTHOG_KEY=xxx
NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com
